@model stoktakýp.Models.Cihaz

@{
    ViewData["Title"] = "Yeni Cihaz Ekle";
}

<div class="row">
    <div class="col-md-8 offset-md-2">
        <div class="card">
            <div class="card-header bg-success text-white">
                <h4><i class="fas fa-plus-circle"></i> Yeni Cihaz Ekle</h4>
            </div>
            <div class="card-body">
                <form asp-action="Create" method="post">
                    <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="CihazAdi" class="form-label"></label>
                            <input asp-for="CihazAdi" class="form-control" placeholder="Örn: Laptop, Mouse, Klavye" />
                            <span asp-validation-for="CihazAdi" class="text-danger"></span>
                        </div>

                        <div class="col-md-6 mb-3">
                            <label asp-for="Marka" class="form-label"></label>
                            <input asp-for="Marka" class="form-control" placeholder="Örn: Dell, HP, Logitech" />
                            <span asp-validation-for="Marka" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="Model" class="form-label"></label>
                            <input asp-for="Model" class="form-control" placeholder="Örn: Latitude 5420" />
                            <span asp-validation-for="Model" class="text-danger"></span>
                        </div>

                        <div class="col-md-6 mb-3">
                            <label asp-for="SeriNumarasi" class="form-label"></label>
                            <input asp-for="SeriNumarasi" class="form-control" placeholder="Benzersiz seri numarasý" />
                            <span asp-validation-for="SeriNumarasi" class="text-danger"></span>
                            <small class="form-text text-muted">Seri numarasý benzersiz olmalýdýr.</small>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="ToplamAdet" class="form-label"></label>
                            <input asp-for="ToplamAdet" class="form-control" type="number" min="1" />
                            <span asp-validation-for="ToplamAdet" class="text-danger"></span>
                        </div>
                    </div>

                    <hr />

                    <div class="d-flex justify-content-between">
                        <a asp-action="Index" class="btn btn-secondary">
                            <i class="fas fa-arrow-left"></i> Geri Dön
                        </a>
                        <button type="submit" class="btn btn-success">
                            <i class="fas fa-save"></i> Kaydet
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

