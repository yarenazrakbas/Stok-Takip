@model stoktakýp.Models.Cihaz

@{
    ViewData["Title"] = "Cihaz Düzenle";
}

<div class="row">
    <div class="col-md-8 offset-md-2">
        <div class="card">
            <div class="card-header bg-warning">
                <h4><i class="fas fa-edit"></i> Cihaz Düzenle</h4>
            </div>
            <div class="card-body">
                <form asp-action="Edit" method="post">
                    <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                    <input type="hidden" asp-for="CihazId" />
                    <input type="hidden" asp-for="KayitTarihi" />

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="CihazAdi" class="form-label"></label>
                            <input asp-for="CihazAdi" class="form-control" />
                            <span asp-validation-for="CihazAdi" class="text-danger"></span>
                        </div>

                        <div class="col-md-6 mb-3">
                            <label asp-for="Marka" class="form-label"></label>
                            <input asp-for="Marka" class="form-control" />
                            <span asp-validation-for="Marka" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="Model" class="form-label"></label>
                            <input asp-for="Model" class="form-control" />
                            <span asp-validation-for="Model" class="text-danger"></span>
                        </div>

                        <div class="col-md-6 mb-3">
                            <label asp-for="SeriNumarasi" class="form-label"></label>
                            <input asp-for="SeriNumarasi" class="form-control" />
                            <span asp-validation-for="SeriNumarasi" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="ToplamAdet" class="form-label"></label>
                            <input asp-for="ToplamAdet" class="form-control" type="number" min="1" />
                            <span asp-validation-for="ToplamAdet" class="text-danger"></span>
                        </div>

                        <div class="col-md-6 mb-3">
                            <label asp-for="MevcutStok" class="form-label"></label>
                            <input asp-for="MevcutStok" class="form-control" type="number" min="0" />
                            <span asp-validation-for="MevcutStok" class="text-danger"></span>
                        </div>
                    </div>

                    <hr />

                    <div class="d-flex justify-content-between">
                        <a asp-action="Index" class="btn btn-secondary">
                            <i class="fas fa-arrow-left"></i> Geri Dön
                        </a>
                        <button type="submit" class="btn btn-warning">
                            <i class="fas fa-save"></i> Güncelle
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

