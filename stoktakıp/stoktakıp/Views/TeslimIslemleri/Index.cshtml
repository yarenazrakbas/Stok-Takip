@model IEnumerable<stoktakýp.Models.TeslimIslemi>

@{
    ViewData["Title"] = "Teslim Ýþlemleri";
}

<div class="row">
    <div class="col-12">
        <div class="d-flex justify-content-between align-items-center mb-3">
            <h2><i class="fas fa-exchange-alt"></i> Teslim Ýþlemleri</h2>
            <a asp-action="Create" class="btn btn-success">
                <i class="fas fa-plus"></i> Yeni Teslim Ýþlemi
            </a>
        </div>
    </div>
</div>

<div class="card mb-3">
    <div class="card-body">
        <form asp-action="Index" method="get" class="row g-3">
            <div class="col-md-4">
                <label class="form-label">Ara:</label>
                <input type="text" name="searchString" class="form-control" placeholder="Kiþi adý veya cihaz ara..." value="@ViewData["SearchString"]">
            </div>
            <div class="col-md-3">
                <label class="form-label">Baþlangýç Tarihi:</label>
                <input type="date" name="baslangicTarihi" class="form-control" value="@ViewData["BaslangicTarihi"]">
            </div>
            <div class="col-md-3">
                <label class="form-label">Bitiþ Tarihi:</label>
                <input type="date" name="bitisTarihi" class="form-control" value="@ViewData["BitisTarihi"]">
            </div>
            <div class="col-md-2">
                <label class="form-label">&nbsp;</label>
                <button type="submit" class="btn btn-primary w-100">
                    <i class="fas fa-search"></i> Filtrele
                </button>
            </div>
        </form>
    </div>
</div>

<div class="card">
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-hover table-striped">
                <thead class="table-dark">
                    <tr>
                        <th>Tarih</th>
                        <th>Cihaz</th>
                        <th>Ýþlem Tipi</th>
                        <th>Teslim Eden</th>
                        <th>Teslim Alan</th>
                        <th>Adet</th>
                        <th>Ýade Tarihi</th>
                        <th>Durum</th>
                        <th>Ýþlemler</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.TeslimTarihi.ToString("dd.MM.yyyy")</td>
                            <td><strong>@item.Cihaz.CihazAdi</strong><br /><small class="text-muted">@item.Cihaz.Marka @item.Cihaz.Model</small></td>
                            <td>
                                @if (item.IslemTipi == stoktakýp.Models.IslemTipi.StokGirisi)
                                {
                                    <span class="badge bg-success"><i class="fas fa-arrow-down"></i> Stok Giriþi</span>
                                }
                                else if (item.IslemTipi == stoktakýp.Models.IslemTipi.PersoneleTeslim)
                                {
                                    <span class="badge bg-warning text-dark"><i class="fas fa-arrow-up"></i> Personele Teslim</span>
                                }
                                else
                                {
                                    <span class="badge bg-info"><i class="fas fa-undo"></i> Ýade</span>
                                }
                            </td>
                            <td>@item.TeslimEden</td>
                            <td>@item.TeslimAlan</td>
                            <td><span class="badge bg-secondary">@item.Adet</span></td>
                            <td>
                                @if (item.IadeTarihi.HasValue)
                                {
                                    <span class="text-success">@item.IadeTarihi.Value.ToString("dd.MM.yyyy")</span>
                                }
                                else
                                {
                                    <span class="text-muted">-</span>
                                }
                            </td>
                            <td>
                                @if (item.IslemTipi == stoktakýp.Models.IslemTipi.PersoneleTeslim && !item.IadeTarihi.HasValue)
                                {
                                    <span class="badge bg-warning text-dark">Zimmetli</span>
                                }
                                else if (item.IadeTarihi.HasValue)
                                {
                                    <span class="badge bg-success">Ýade Edildi</span>
                                }
                                else
                                {
                                    <span class="badge bg-info">Tamamlandý</span>
                                }
                            </td>
                            <td>
                                <div class="btn-group" role="group">
                                    <a asp-action="Details" asp-route-id="@item.IslemId" class="btn btn-sm btn-info" title="Detaylar">
                                        <i class="fas fa-info-circle"></i>
                                    </a>
                                    @if (item.IslemTipi == stoktakýp.Models.IslemTipi.PersoneleTeslim && !item.IadeTarihi.HasValue)
                                    {
                                        <a asp-action="IadeEt" asp-route-id="@item.IslemId" class="btn btn-sm btn-success" title="Ýade Et">
                                            <i class="fas fa-undo"></i>
                                        </a>
                                    }
                                    <a asp-action="Delete" asp-route-id="@item.IslemId" class="btn btn-sm btn-danger" title="Sil">
                                        <i class="fas fa-trash"></i>
                                    </a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

        @if (!Model.Any())
        {
            <div class="alert alert-info text-center">
                <i class="fas fa-info-circle"></i> Henüz teslim iþlemi bulunmamaktadýr.
            </div>
        }
    </div>
</div>

