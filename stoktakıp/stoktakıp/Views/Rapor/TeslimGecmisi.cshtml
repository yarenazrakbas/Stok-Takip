@model IEnumerable<stoktakýp.Models.TeslimIslemi>

@{
    ViewData["Title"] = "Teslim Geçmiþi Raporu";
}

<div class="row mb-3">
    <div class="col-12">
        <div class="d-flex justify-content-between align-items-center">
            <h2><i class="fas fa-history"></i> Teslim Geçmiþi Raporu</h2>
            <div>
                <a asp-action="TeslimGecmisiExcel" asp-route-baslangicTarihi="@ViewData["BaslangicTarihi"]" asp-route-bitisTarihi="@ViewData["BitisTarihi"]" class="btn btn-success">
                    <i class="fas fa-file-excel"></i> Excel Ýndir
                </a>
                <button onclick="window.print()" class="btn btn-secondary">
                    <i class="fas fa-print"></i> Yazdýr
                </button>
            </div>
        </div>
    </div>
</div>

<div class="card mb-3">
    <div class="card-body">
        <form asp-action="TeslimGecmisi" method="get" class="row g-3">
            <div class="col-md-4">
                <label class="form-label">Baþlangýç Tarihi:</label>
                <input type="date" name="baslangicTarihi" class="form-control" value="@ViewData["BaslangicTarihi"]">
            </div>
            <div class="col-md-4">
                <label class="form-label">Bitiþ Tarihi:</label>
                <input type="date" name="bitisTarihi" class="form-control" value="@ViewData["BitisTarihi"]">
            </div>
            <div class="col-md-2">
                <label class="form-label">Ýþlem Tipi:</label>
                <select name="islemTipi" class="form-select">
                    <option value="">Tümü</option>
                    <option value="0" selected="@(ViewData["IslemTipi"]?.ToString() == "0")">Stok Giriþi</option>
                    <option value="1" selected="@(ViewData["IslemTipi"]?.ToString() == "1")">Personele Teslim</option>
                    <option value="2" selected="@(ViewData["IslemTipi"]?.ToString() == "2")">Ýade</option>
                </select>
            </div>
            <div class="col-md-2">
                <label class="form-label">&nbsp;</label>
                <button type="submit" class="btn btn-primary w-100">
                    <i class="fas fa-search"></i> Filtrele
                </button>
            </div>
        </form>
    </div>
</div>

<div class="card">
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-hover table-striped">
                <thead class="table-dark">
                    <tr>
                        <th>Tarih</th>
                        <th>Cihaz</th>
                        <th>Marka/Model</th>
                        <th>Ýþlem Tipi</th>
                        <th>Teslim Eden</th>
                        <th>Teslim Alan</th>
                        <th>Adet</th>
                        <th>Ýade Tarihi</th>
                        <th>Açýklama</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.TeslimTarihi.ToString("dd.MM.yyyy")</td>
                            <td><strong>@item.Cihaz.CihazAdi</strong></td>
                            <td><small>@item.Cihaz.Marka @item.Cihaz.Model</small></td>
                            <td>
                                @if (item.IslemTipi == stoktakýp.Models.IslemTipi.StokGirisi)
                                {
                                    <span class="badge bg-success">Stok Giriþi</span>
                                }
                                else if (item.IslemTipi == stoktakýp.Models.IslemTipi.PersoneleTeslim)
                                {
                                    <span class="badge bg-warning text-dark">Personele Teslim</span>
                                }
                                else
                                {
                                    <span class="badge bg-info">Ýade</span>
                                }
                            </td>
                            <td>@item.TeslimEden</td>
                            <td>@item.TeslimAlan</td>
                            <td><span class="badge bg-secondary">@item.Adet</span></td>
                            <td>@(item.IadeTarihi?.ToString("dd.MM.yyyy") ?? "-")</td>
                            <td><small>@(item.Aciklama ?? "-")</small></td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

        @if (!Model.Any())
        {
            <div class="alert alert-info text-center">
                <i class="fas fa-info-circle"></i> Seçilen kriterlere uygun iþlem bulunmamaktadýr.
            </div>
        }
        else
        {
            <div class="alert alert-secondary mt-3">
                <strong>Toplam Ýþlem Sayýsý:</strong> @Model.Count()
            </div>
        }
    </div>
</div>

<style>
    @@media print {
        .btn {
            display: none;
        }

        .card:first-child {
            display: none;
        }

        .navbar {
            display: none;
        }

        .footer {
            display: none;
        }
    }
</style>

