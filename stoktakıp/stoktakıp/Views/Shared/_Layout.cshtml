<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Envanter Yönetim Sistemi</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/stoktakıp.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
            <div class="container-fluid">
                <a class="navbar-brand" asp-controller="Rapor" asp-action="Dashboard">
                    <i class="fas fa-boxes"></i> Envanter Yönetim Sistemi
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
                        aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Rapor" asp-action="Dashboard">
                                <i class="fas fa-chart-line"></i> Dashboard
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Cihaz" asp-action="Index">
                                <i class="fas fa-laptop"></i> Cihazlar
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="TeslimIslemleri" asp-action="Index">
                                <i class="fas fa-exchange-alt"></i> Teslim İşlemleri
                            </a>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button"
                               data-bs-toggle="dropdown" aria-expanded="false">
                                <i class="fas fa-file-alt"></i> Raporlar
                            </a>
                            <ul class="dropdown-menu" aria-labelledby="navbarDropdown">
                                <li>
                                    <a class="dropdown-item" asp-controller="Rapor" asp-action="MevcutStokDurumu">
                                        <i class="fas fa-warehouse"></i> Mevcut Stok Durumu
                                    </a>
                                </li>
                                <li>
                                    <a class="dropdown-item" asp-controller="Rapor" asp-action="TeslimGecmisi">
                                        <i class="fas fa-history"></i> Teslim Geçmişi
                                    </a>
                                </li>
                                <li>
                                    <a class="dropdown-item" asp-controller="Rapor" asp-action="KisiyeGoreZimmetli">
                                        <i class="fas fa-user-tag"></i> Zimmetli Cihazlar
                                    </a>
                                </li>
                                <li>
                                    <a class="dropdown-item" asp-controller="Rapor" asp-action="CihazBazliHareket">
                                        <i class="fas fa-list-alt"></i> Cihaz Hareketleri
                                    </a>
                                </li>
                                <li>
                                    <a class="dropdown-item" asp-controller="Rapor" asp-action="MarkaModelDagilim">
                                        <i class="fas fa-chart-pie"></i> Marka/Model Dağılımı
                                    </a>
                                </li>
                                <li>
                                    <a class="dropdown-item" asp-controller="Rapor" asp-action="IadeEdilmemis">
                                        <i class="fas fa-exclamation-triangle"></i> İade Edilmemiş Cihazlar
                                    </a>
                                </li>
                            </ul>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <div class="container-fluid mt-3">
        @if (TempData["SuccessMessage"] != null)
        {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="fas fa-check-circle"></i> @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
        }
        @if (TempData["ErrorMessage"] != null)
        {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="fas fa-exclamation-circle"></i> @TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
        }

        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted mt-5">
        <div class="container text-center py-3">
            &copy; 2025 - Envanter Yönetim Sistemi | Bilgi İşlem Departmanı
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
